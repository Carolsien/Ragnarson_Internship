<h1> List of products </h1>

<div>
  <table>
    <thead>
      <tr>
        <th> Name </th>
        <th> Price </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><a href="/products/<%= product.id %>"><%= product.name %></a></td>
        <td><%= product.price %></td>
      </tr>
      <%end %>
    </tbody>
  </table>
</div>
