
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% basket.each do |basket| %>
    <tr>
      <td><%= basket[:product].name %></td>
      <td><%= basket[:product].price %></td>
      <td><%= basket[:quantity] %></td>
      <td><%= basket[:total_price] %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td>Summary</td>
      <td><%= basket.map{|basket| basket[:total_price]}.reduce(:+) %></td>
</table>
